{
  "name": "particle-weaver",
  "version": "0.1.0",
  "description": "A powerful, intuitive JavaScript library for creating, animating and interacting with particle clouds",
  "main": "dist/particle-weaver.umd.js",
  "module": "dist/particle-weaver.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "particles",
    "3d",
    "threejs",
    "webgl",
    "animation",
    "graphics",
    "visualization"
  ],
  "author": "iowathe3rd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iowathe3rd/particle-weaver.git"
  },
  "bugs": {
    "url": "https://github.com/iowathe3rd/particle-weaver/issues"
  },
  "homepage": "https://github.com/iowathe3rd/particle-weaver#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/three": "^0.180.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.8",
    "typescript": "^5.0.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.0"
  }
}
